<h2>Lista de Categorias: </h2>
<hr>
<a href="./categorias/add" ><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}
	<div class="card mt-4">
		<div class="card-body">
			<h4> {{nome}} </h4>
			<small> {{slug}} </small><br>
			<small> {{date}}</small><br>

			<a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-3">Editar</button></a>

			<form action="/admin/categorias/delete" method="POST">
				<input type="hidden" name="id" value="{{_id}}">
				<button type="submit" class="btn btn-danger mt-3">Deletar</button>
			</form>
		</div>
	</div>
{{else}}
	<h4 class="mt-3">Nenhuma categoria</h4>
{{/each}}
