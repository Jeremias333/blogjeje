<h2>Lista de Postagens: </h2>
<hr>
<a href="./postagens/add" ><button class="btn btn-success">Nova Postagem</button></a>


{{#each postagens}}
	<div class="card mt-2">
		<div class="card-body">
			<h4>{{titulo}}</h4>
			<p>Descrição: {{descricao}}</p>
			<small>Data de Criação: {{data}}</small><br>
			<small>Categoria: {{categoria.nome}}</small><br>
			<a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-3">Editar</button></a>
			<form action="/admin/postagens/delete" method="POST">
				<input type="hidden" name="id" value="{{_id}}">
				<button type="submit" class="btn btn-danger mt-3">Deletar</button>
			</form>
		</div>
	</div>
{{else}}
	<p>Nenhuma postagem no registro!</p>
{{/each}}